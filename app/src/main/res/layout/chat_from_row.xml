<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/message_textview_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_messages_from"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:textColor="@android:color/white"
        tools:text="This is my message that will wrap into multiple lines and keep on going"
        app:layout_constraintStart_toEndOf="@+id/user_imageview_from"
        app:layout_constraintTop_toTopOf="@+id/user_imageview_from" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_imageview_from"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_width="2dp"
        android:src="@drawable/ic_person"
        app:civ_border_color="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>